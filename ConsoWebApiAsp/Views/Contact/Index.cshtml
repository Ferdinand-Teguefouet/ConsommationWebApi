@model IEnumerable<ConsoWebApiAsp.Models.AspContact>

@{
    ViewData["Title"] = "Contacts";
}

<h1>Liste de contacts</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Ajouter un contact</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Id)*@
                Identifiant
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.CompleteName)*@
                Prénom et nom
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Email)*@
                Adresse Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompleteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <button class="btn btn-outline-warning"> @Html.ActionLink("Modifier", "Edit", new { id = item.Id })</button> |
                    <button class="btn btn-outline-info">@Html.ActionLink("Détails", "Details", new { id = item.Id })</button> |
                    <button class="btn btn-outline-danger">@Html.ActionLink("Supprimer", "Delete", new { id = item.Id }) </button>
                </td>
            </tr>
}
    </tbody>
</table>
